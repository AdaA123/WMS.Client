<UserControl x:Class="WMS.Client.Views.ChangePasswordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:WMS.Client.Converters"
             Background="White">

    <UserControl.Resources>
        <converters:MultiParameterConverter x:Key="MultiParameterConverter"/>
    </UserControl.Resources>

    <StackPanel Margin="50" HorizontalAlignment="Center" VerticalAlignment="Top" Width="400">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
            <materialDesign:PackIcon Kind="KeyChange" Width="30" Height="30" VerticalAlignment="Center" Foreground="{StaticResource PrimaryHueMidBrush}"/>
            <TextBlock Text="修改登录密码" FontSize="24" FontWeight="Bold" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <PasswordBox x:Name="PbOld" 
                     materialDesign:HintAssist.Hint="旧密码" 
                     Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" 
                     Margin="0,0,0,20"/>

        <PasswordBox x:Name="PbNew" 
                     materialDesign:HintAssist.Hint="新密码" 
                     Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" 
                     Margin="0,0,0,20"/>

        <PasswordBox x:Name="PbConfirm" 
                     materialDesign:HintAssist.Hint="确认新密码" 
                     Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" 
                     Margin="0,0,0,30"/>

        <Button Content="确认修改" Style="{StaticResource MaterialDesignRaisedButton}" Height="40">
            <Button.Command>
                <Binding Path="ChangePasswordCommand"/>
            </Button.Command>

            <Button.CommandParameter>
                <MultiBinding Converter="{StaticResource MultiParameterConverter}">
                    <Binding ElementName="PbOld"/>
                    <Binding ElementName="PbNew"/>
                    <Binding ElementName="PbConfirm"/>
                </MultiBinding>
            </Button.CommandParameter>
        </Button>
    </StackPanel>
</UserControl>