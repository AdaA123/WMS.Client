<UserControl x:Class="WMS.Client.Views.ProductDetailDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="600" Width="900">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding DetailTitle}" FontSize="20" FontWeight="Bold" Margin="20" HorizontalAlignment="Center"/>

        <TabControl Grid.Row="1" Margin="10" Style="{StaticResource MaterialDesignFilledTabControl}" materialDesign:ColorZoneAssist.Mode="PrimaryMid">
            <TabItem Header="入库记录">
                <DataGrid ItemsSource="{Binding DetailInbounds}" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" Style="{StaticResource MaterialDesignDataGrid}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="日期" Binding="{Binding InboundDate, StringFormat=yyyy-MM-dd}"/>
                        <DataGridTextColumn Header="单号" Binding="{Binding OrderNo}"/>
                        <DataGridTextColumn Header="供应商" Binding="{Binding Supplier}"/>
                        <DataGridTextColumn Header="进货价" Binding="{Binding Price, StringFormat=C2}" Foreground="#4CAF50"/>
                        <DataGridTextColumn Header="数量" Binding="{Binding AcceptedQuantity}" FontWeight="Bold"/>
                        <DataGridTextColumn Header="状态" Binding="{Binding Status}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="出库记录">
                <DataGrid ItemsSource="{Binding DetailOutbounds}" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" Style="{StaticResource MaterialDesignDataGrid}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="日期" Binding="{Binding OutboundDate, StringFormat=yyyy-MM-dd}"/>
                        <DataGridTextColumn Header="单号" Binding="{Binding OrderNo}"/>
                        <DataGridTextColumn Header="客户" Binding="{Binding Customer}"/>
                        <DataGridTextColumn Header="售价" Binding="{Binding Price, StringFormat=C2}" Foreground="#F44336"/>
                        <DataGridTextColumn Header="数量" Binding="{Binding Quantity}" FontWeight="Bold"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="退货记录">
                <DataGrid ItemsSource="{Binding DetailReturns}" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" Style="{StaticResource MaterialDesignDataGrid}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="日期" Binding="{Binding ReturnDate, StringFormat=yyyy-MM-dd}"/>
                        <DataGridTextColumn Header="客户" Binding="{Binding Customer}"/>
                        <DataGridTextColumn Header="数量" Binding="{Binding Quantity}" FontWeight="Bold" Foreground="Red"/>
                        <DataGridTextColumn Header="原因" Binding="{Binding Reason}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <Button Grid.Row="2" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Content="关闭" Width="100" Margin="20" Style="{StaticResource MaterialDesignOutlinedButton}"/>
    </Grid>
</UserControl>