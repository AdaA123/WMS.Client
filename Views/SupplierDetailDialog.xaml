<UserControl x:Class="WMS.Client.Views.SupplierDetailDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="600" Width="900">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding DetailTitle}" FontSize="20" FontWeight="Bold" Margin="20" HorizontalAlignment="Center"/>

        <TabControl Grid.Row="1" Margin="10" Style="{StaticResource MaterialDesignFilledTabControl}" materialDesign:ColorZoneAssist.Mode="PrimaryMid">
            <TabItem Header="供货记录 (入库)">
                <DataGrid ItemsSource="{Binding DetailInbounds}" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" Style="{StaticResource MaterialDesignDataGrid}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="日期" Binding="{Binding InboundDate, StringFormat=yyyy-MM-dd}"/>
                        <DataGridTextColumn Header="产品名称" Binding="{Binding ProductName}"/>
                        <DataGridTextColumn Header="单价" Binding="{Binding Price, StringFormat=C2}"/>
                        <DataGridTextColumn Header="进货数量" Binding="{Binding Quantity}"/>
                        <DataGridTextColumn Header="验收合格" Binding="{Binding AcceptedQuantity}" FontWeight="Bold" Foreground="#4CAF50"/>
                        <DataGridTextColumn Header="状态" Binding="{Binding Status}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
        <Button Grid.Row="2" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Content="关闭" Width="100" Margin="20" Style="{StaticResource MaterialDesignOutlinedButton}"/>
    </Grid>
</UserControl>