<UserControl x:Class="WMS.Client.Views.OutboundView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="900">

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <materialDesign:Card Grid.Row="0" Margin="0,0,0,20" Padding="15" UniformCornerRadius="6">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                <materialDesign:PackIcon Kind="PackageVariantClosedPlus" Width="25" Height="25" VerticalAlignment="Center" Margin="0,0,15,0" Foreground="Gray"/>

                <TextBox Width="140" Margin="0,0,15,0"
                         materialDesign:HintAssist.Hint="产品名称"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Text="{Binding NewOutbound.ProductName}" />

                <TextBox Width="80" Margin="0,0,15,0"
                         materialDesign:HintAssist.Hint="数量"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Text="{Binding NewOutbound.Quantity}" />

                <TextBox Width="80" Margin="0,0,15,0"
                         materialDesign:HintAssist.Hint="售价 (元)"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Text="{Binding NewOutbound.Price}" />

                <ComboBox Width="140" Margin="0,0,15,0"
                          materialDesign:HintAssist.Hint="客户"
                          IsEditable="True"
                          Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                          ItemsSource="{Binding Customers}"
                          Text="{Binding NewOutbound.Customer}" />

                <Button Content="确认出库" Command="{Binding SaveCommand}" Width="100" Margin="10,0,0,0"/>
            </StackPanel>
        </materialDesign:Card>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding OutboundList}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  HeadersVisibility="All"
                  SelectionMode="Single"
                  Style="{StaticResource MaterialDesignDataGrid}">

            <DataGrid.Columns>
                <DataGridTextColumn Header="出库单号" Binding="{Binding OrderNo}" Width="160" FontWeight="Bold"/>

                <DataGridTemplateColumn Header="产品名称" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ProductName}" VerticalAlignment="Center" FontWeight="Medium"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="客户" Binding="{Binding Customer}" Width="150"/>

                <DataGridTextColumn Header="数量" Binding="{Binding Quantity}" Width="80"/>

                <DataGridTextColumn Header="售价" Binding="{Binding Price, StringFormat=C2}" Width="100" Foreground="#FF5252"/>

                <DataGridTextColumn Header="出库日期" Binding="{Binding OutboundDate, StringFormat=yyyy-MM-dd HH:mm}" Width="160"/>

                <DataGridTemplateColumn Header="操作" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                    ToolTip="删除"
                                    Foreground="Red"
                                    Width="30" Height="30"
                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                <materialDesign:PackIcon Kind="Delete" />
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>