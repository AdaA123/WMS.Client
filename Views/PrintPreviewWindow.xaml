<Window x:Class="WMS.Client.Views.PrintPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="打印预览" Height="900" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <materialDesign:Card Grid.Row="0" Margin="10" Padding="15" UniformCornerRadius="8" 
                               materialDesign:ShadowAssist.ShadowDepth="Depth4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="InformationOutline" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="Gray"/>
                    <TextBlock Text="请检查预览内容，确认无误后点击右侧打印按钮" 
                               VerticalAlignment="Center" Foreground="Gray" FontSize="14"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="关闭预览" Click="CloseButton_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,15,0" Width="100"/>

                    <Button Click="PrintButton_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Width="140" ToolTip="点击开始打印">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Printer" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="确认打印" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <Border Grid.Row="1" Margin="10,0,10,10" BorderBrush="LightGray" BorderThickness="1">
            <DocumentViewer Name="docViewer"/>
        </Border>
    </Grid>
</Window>