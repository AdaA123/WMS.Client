<UserControl x:Class="WMS.Client.Views.ReturnView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.Resources>
        <Style x:Key="ReadOnlyTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="IBeam"/>
        </Style>
        <Style x:Key="CenteredReadOnlyTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource ReadOnlyTextBoxStyle}">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Background="White" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <materialDesign:Card Grid.Row="0" Margin="0,0,0,20" Padding="15" UniformCornerRadius="6">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="KeyboardReturn" Width="25" Height="25" VerticalAlignment="Center" Margin="0,0,15,0" Foreground="Gray"/>

                    <ComboBox Width="140" Margin="0,0,15,0" 
                              materialDesign:HintAssist.Hint="退回产品" 
                              IsEditable="True" StaysOpenOnEdit="True" IsTextSearchEnabled="False" KeyUp="ComboBox_KeyUp"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
                              ItemsSource="{Binding ProductList}" 
                              Text="{Binding EntryProductName, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBox Width="70" Margin="0,0,15,0" materialDesign:HintAssist.Hint="数量" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding NewReturn.Quantity}" />
                    <TextBox Width="70" Margin="0,0,15,0" materialDesign:HintAssist.Hint="退款金额" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding NewReturn.Price}" />

                    <ComboBox Width="120" Margin="0,0,15,0" 
                              materialDesign:HintAssist.Hint="客户" 
                              IsEditable="True" StaysOpenOnEdit="True" IsTextSearchEnabled="False" KeyUp="ComboBox_KeyUp"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
                              ItemsSource="{Binding Customers}" 
                              Text="{Binding NewReturn.Customer, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBox Width="100" Margin="0,0,15,0" materialDesign:HintAssist.Hint="退货原因" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding NewReturn.Reason}" />

                    <Button Command="{Binding SaveCommand}" Width="100" Margin="10,0,0,0" Background="#FF7043" BorderBrush="#FF7043">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding NewReturn.Id}" Value="0">
                                        <Setter Property="Content" Value="确认退货"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding NewReturn.Id}" Value="{x:Null}">
                                        <Setter Property="Content" Value="确认退货"/>
                                    </DataTrigger>
                                </Style.Triggers>
                                <Setter Property="Content" Value="保存修改"/>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Command="{Binding CancelCommand}" Content="取消" Foreground="Gray" BorderBrush="Gray" Width="80" Margin="10,0,0,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding NewReturn.Id}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Command="{Binding ExportCommand}" Style="{StaticResource MaterialDesignOutlinedButton}" ToolTip="导出Excel" Width="40" Margin="10,0,0,0" Padding="0">
                        <materialDesign:PackIcon Kind="FileExcel" Width="20" Height="20"/>
                    </Button>
                </StackPanel>
            </materialDesign:Card>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                    <materialDesign:PackIcon Kind="Magnify" VerticalAlignment="Center" Foreground="Gray" Width="20" Height="20"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                             materialDesign:HintAssist.Hint="搜索单号/产品/客户..."
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Width="220" Margin="10,-10,0,0"/>
                </StackPanel>

                <DataGrid Grid.Row="1" ItemsSource="{Binding ReturnList}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" HeadersVisibility="All" SelectionMode="Single" Style="{StaticResource MaterialDesignDataGrid}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="退货单号" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding ReturnNo}" Style="{StaticResource ReadOnlyTextBoxStyle}" FontWeight="Bold"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="产品名称" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding ProductName}" Style="{StaticResource ReadOnlyTextBoxStyle}" MaxWidth="160" ToolTip="{Binding ProductName}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="数量" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Quantity}" Style="{StaticResource CenteredReadOnlyTextBoxStyle}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="退款金额" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Price, StringFormat=C2}" Style="{StaticResource CenteredReadOnlyTextBoxStyle}" Foreground="#FF5252"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="总金额" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding TotalAmount, StringFormat=C2, Mode=OneWay}" Style="{StaticResource CenteredReadOnlyTextBoxStyle}" FontWeight="Bold" Foreground="#E91E63"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="客户" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Customer}" Style="{StaticResource ReadOnlyTextBoxStyle}" MaxWidth="150" ToolTip="{Binding Customer}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="原因" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Reason}" Style="{StaticResource ReadOnlyTextBoxStyle}" MaxWidth="150" ToolTip="{Binding Reason}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="退货时间" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding ReturnDate, StringFormat=yyyy-MM-dd HH:mm}" Style="{StaticResource CenteredReadOnlyTextBoxStyle}" MaxWidth="90"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="操作" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Button Style="{StaticResource MaterialDesignIconButton}" ToolTip="修改" Foreground="{DynamicResource PrimaryHueMidBrush}" Width="30" Height="30"
                                                Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}">
                                            <materialDesign:PackIcon Kind="Pencil" />
                                        </Button>
                                        <Button Style="{StaticResource MaterialDesignIconButton}" ToolTip="删除" Foreground="Red" Width="30" Height="30"
                                                Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}">
                                            <materialDesign:PackIcon Kind="Delete" />
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>