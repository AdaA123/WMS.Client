<UserControl x:Class="WMS.Client.Views.ReturnView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="900">

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <materialDesign:Card Grid.Row="0" Margin="0,0,0,20" Padding="15" UniformCornerRadius="6">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="KeyboardReturn" Width="25" Height="25" VerticalAlignment="Center" Margin="0,0,15,0" Foreground="Gray"/>

                <ComboBox Width="140" Margin="0,0,15,0"
                          materialDesign:HintAssist.Hint="退回产品"
                          IsEditable="True"
                          Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                          ItemsSource="{Binding ProductList}"
                          Text="{Binding NewReturn.ProductName}" />

                <TextBox Width="70" Margin="0,0,15,0"
                         materialDesign:HintAssist.Hint="数量"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Text="{Binding NewReturn.Quantity}" />

                <TextBox Width="70" Margin="0,0,15,0"
                         materialDesign:HintAssist.Hint="退款金额"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Text="{Binding NewReturn.Price}" />

                <ComboBox Width="120" Margin="0,0,15,0"
                          materialDesign:HintAssist.Hint="客户"
                          IsEditable="True"
                          Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                          ItemsSource="{Binding Customers}"
                          Text="{Binding NewReturn.Customer}" />

                <TextBox Width="100" Margin="0,0,15,0"
                         materialDesign:HintAssist.Hint="退货原因"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Text="{Binding NewReturn.Reason}" />

                <Button Content="确认退货" 
                        Command="{Binding SaveCommand}" 
                        Width="100" Margin="10,0,0,0"
                        Background="#FF7043" BorderBrush="#FF7043"/>
            </StackPanel>
        </materialDesign:Card>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding ReturnList}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  HeadersVisibility="All"
                  SelectionMode="Single"
                  Style="{StaticResource MaterialDesignDataGrid}">

            <DataGrid.Columns>
                <DataGridTextColumn Header="退货单号" Binding="{Binding ReturnNo}" Width="160" FontWeight="Bold"/>

                <DataGridTemplateColumn Header="产品名称" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ProductName}" VerticalAlignment="Center" FontWeight="Medium"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="数量" Binding="{Binding Quantity}" Width="80"/>

                <DataGridTextColumn Header="退款金额" Binding="{Binding Price, StringFormat=C2}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#FF5252"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="客户" Binding="{Binding Customer}" Width="120"/>

                <DataGridTextColumn Header="原因" Binding="{Binding Reason}" Width="150"/>

                <DataGridTextColumn Header="日期" Binding="{Binding ReturnDate, StringFormat=yyyy-MM-dd}" Width="120"/>

                <DataGridTemplateColumn Header="操作" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                    ToolTip="删除"
                                    Foreground="Red"
                                    Width="30" Height="30"
                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                <materialDesign:PackIcon Kind="Delete" />
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>