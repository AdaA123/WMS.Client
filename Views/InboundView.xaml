<UserControl x:Class="WMS.Client.Views.InboundView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="768" d:DesignWidth="1024"
             x:Name="Root">

    <materialDesign:DialogHost Identifier="InboundDialogHost" DialogTheme="Inherit">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">

            <Grid Background="White" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <materialDesign:Card Grid.Row="0" Margin="0,0,0,20" Padding="15" UniformCornerRadius="6">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="PlaylistPlus" Width="25" Height="25" VerticalAlignment="Center" Margin="0,0,15,0" Foreground="Gray"/>

                        <ComboBox Width="140" Margin="0,0,15,0" 
                                  materialDesign:HintAssist.Hint="产品名称 (搜索/录入)" 
                                  IsEditable="True" StaysOpenOnEdit="True" IsTextSearchEnabled="False" KeyUp="ComboBox_KeyUp"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
                                  ItemsSource="{Binding ProductList}" 
                                  Text="{Binding EntryProductName, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBox Width="70" Margin="0,0,15,0" materialDesign:HintAssist.Hint="数量" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding NewInbound.Quantity}" />
                        <TextBox Width="70" Margin="0,0,15,0" materialDesign:HintAssist.Hint="单价" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="{Binding NewInbound.Price}" />

                        <ComboBox Width="120" Margin="0,0,15,0" 
                                  materialDesign:HintAssist.Hint="供应商" 
                                  IsEditable="True" StaysOpenOnEdit="True" IsTextSearchEnabled="False" KeyUp="ComboBox_KeyUp"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
                                  ItemsSource="{Binding Suppliers}" 
                                  Text="{Binding NewInbound.Supplier, UpdateSourceTrigger=PropertyChanged}" />

                        <ComboBox Width="110" Margin="0,0,15,0" materialDesign:HintAssist.Hint="排序方式" Style="{StaticResource MaterialDesignFloatingHintComboBox}" ItemsSource="{Binding SortOptions}" SelectedItem="{Binding SelectedSortOption}" Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                        <Button Command="{Binding SaveCommand}" Width="100" Margin="10,0,0,0">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding NewInbound.Id}" Value="0">
                                            <Setter Property="Content" Value="确认入库"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding NewInbound.Id}" Value="{x:Null}">
                                            <Setter Property="Content" Value="确认入库"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                    <Setter Property="Content" Value="保存修改"/>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Command="{Binding CancelCommand}" Content="取消" Foreground="Gray" BorderBrush="Gray" Width="80" Margin="10,0,0,0">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding NewInbound.Id}" Value="0">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Command="{Binding ExportCommand}" Style="{StaticResource MaterialDesignOutlinedButton}" ToolTip="导出Excel" Width="40" Margin="10,0,0,0" Padding="0">
                            <materialDesign:PackIcon Kind="FileExcel" Width="20" Height="20"/>
                        </Button>
                        <Button Command="{Binding PrintCommand}" Style="{StaticResource MaterialDesignOutlinedButton}" ToolTip="打印" Width="80" Margin="10,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Printer" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                <TextBlock Text="打印" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </materialDesign:Card>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="Magnify" VerticalAlignment="Center" Foreground="Gray" Width="20" Height="20"/>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 materialDesign:HintAssist.Hint="搜索单号/产品/供应商..."
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 Width="220" Margin="10,-10,0,0"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" ItemsSource="{Binding InboundList}" PreviewMouseWheel="DataGrid_PreviewMouseWheel" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto" MinHeight="400" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" HeadersVisibility="All" SelectionMode="Single" Style="{StaticResource MaterialDesignDataGrid}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="入库单号" Binding="{Binding OrderNo}" Width="Auto" MinWidth="130" FontWeight="Bold"/>

                            <DataGridTemplateColumn Header="产品名称" Width="1.5*" MinWidth="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ProductName}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" ToolTip="{Binding ProductName}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="供应商" Binding="{Binding Supplier}" Width="1.2*" MinWidth="100"/>

                            <DataGridTextColumn Header="单价" Binding="{Binding Price, StringFormat=C2}" Width="0.7*" MinWidth="80"/>

                            <DataGridTextColumn Header="进货数" Binding="{Binding Quantity}" Width="0.5*" MinWidth="70"/>
                            <DataGridTextColumn Header="入库总额" Binding="{Binding TotalAmount, StringFormat=C2}" Width="0.8*" MinWidth="100" Foreground="Gray"/>

                            <DataGridTextColumn Header="合格数" Binding="{Binding AcceptedQuantity}" Width="0.5*" MinWidth="70" FontWeight="Bold" Foreground="#4CAF50"/>
                            <DataGridTextColumn Header="验收总额" Binding="{Binding AcceptedTotalAmount, StringFormat=C2}" Width="0.8*" MinWidth="100" FontWeight="Bold" Foreground="#4CAF50"/>

                            <DataGridTextColumn Header="拒收" Binding="{Binding RejectedQuantity}" Width="0.5*" MinWidth="60" FontWeight="Bold" Foreground="#F44336"/>

                            <DataGridTemplateColumn Header="状态" Width="90" MinWidth="90">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="4" Padding="6,2">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#EEE"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="待验收">
                                                            <Setter Property="Background" Value="#FFF3E0"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="已验收">
                                                            <Setter Property="Background" Value="#E8F5E9"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="已退货">
                                                            <Setter Property="Background" Value="#FFEBEE"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Status}" HorizontalAlignment="Center" FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="Gray"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="待验收">
                                                                <Setter Property="Foreground" Value="#FF9800"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="已验收">
                                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="已退货">
                                                                <Setter Property="Foreground" Value="#F44336"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="入库时间" Binding="{Binding InboundDate, StringFormat=yyyy-MM-dd HH:mm}" Width="Auto" MinWidth="130"/>
                            <DataGridTextColumn Header="验收时间" Binding="{Binding CheckDate, StringFormat=yyyy-MM-dd HH:mm}" Width="Auto" MinWidth="130"/>

                            <DataGridTemplateColumn Header="操作" Width="150" MinWidth="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button ToolTip="验收处理" Foreground="#4CAF50" Width="28" Height="28"
                                                    Command="{Binding DataContext.ConfirmAcceptCommand, ElementName=Root}" CommandParameter="{Binding}">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignIconButton}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="待验收">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="已验收">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="已退货">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <materialDesign:PackIcon Kind="CheckBold" />
                                            </Button>

                                            <Button Style="{StaticResource MaterialDesignIconButton}" ToolTip="修改" Foreground="{DynamicResource PrimaryHueMidBrush}" Width="28" Height="28"
                                                    Command="{Binding DataContext.EditCommand, ElementName=Root}" CommandParameter="{Binding}">
                                                <materialDesign:PackIcon Kind="Pencil" />
                                            </Button>

                                            <Button Style="{StaticResource MaterialDesignIconButton}" ToolTip="删除" Foreground="Red" Width="28" Height="28"
                                                    Command="{Binding DataContext.DeleteCommand, ElementName=Root}" CommandParameter="{Binding}">
                                                <materialDesign:PackIcon Kind="Delete" />
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </ScrollViewer>
    </materialDesign:DialogHost>
</UserControl>