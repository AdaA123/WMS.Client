<UserControl x:Class="WMS.Client.Views.AcceptanceDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Width="350" Background="White">
    <Grid Margin="20">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <materialDesign:PackIcon Kind="ClipboardCheck" Width="24" Height="24" Foreground="{StaticResource PrimaryHueMidBrush}" VerticalAlignment="Center"/>
                <TextBlock Text="入库验收处理" FontSize="18" FontWeight="Bold" Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock Text="该批次产品总数：" Foreground="Gray"/>
            <TextBlock Text="{Binding Quantity}" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

            <TextBox x:Name="TxtAccepted" 
                     materialDesign:HintAssist.Hint="请输入合格数量"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     FontSize="16"
                     Margin="0,0,0,20"
                     TextChanged="TxtAccepted_TextChanged"/>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="自动计算拒收数：" VerticalAlignment="Center" Foreground="Gray"/>
                <TextBlock x:Name="TxtRejected" Text="0" FontSize="16" FontWeight="Bold" Foreground="#F44336" Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock Text="* 合格品将计入库存，拒收品将标记退回。" FontSize="11" Foreground="Gray" Margin="0,5,0,0"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                <Button Content="取消" Style="{StaticResource MaterialDesignFlatButton}" 
                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" 
                        CommandParameter="{x:Null}"/>
                <Button Content="确认验收" Style="{StaticResource MaterialDesignRaisedButton}" Margin="10,0,0,0"
                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" 
                        CommandParameter="{Binding ElementName=TxtAccepted, Path=Text}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>