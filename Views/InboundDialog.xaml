<UserControl x:Class="WMS.Client.Views.InboundDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Width="400" Height="350" Background="White">
    <Grid Margin="20">
        <StackPanel>
            <TextBox Text="新建入库单" 
                     Style="{StaticResource SelectableTextBlock}" 
                     FontSize="20" 
                     FontWeight="Bold"
                     Margin="0,0,0,20"/>

            <TextBox Text="{Binding OrderNo}"
                     materialDesign:HintAssist.Hint="入库单号 (自动生成)"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     IsReadOnly="True" 
                     Margin="0,10"/>

            <ComboBox SelectedValue="{Binding Supplier}"
                      SelectedValuePath="Content"
                      materialDesign:HintAssist.Hint="选择供应商"
                      Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                      Margin="0,10">
                <ComboBoxItem Content="京东物流"/>
                <ComboBoxItem Content="顺丰供应链"/>
                <ComboBoxItem Content="德邦快递"/>
                <ComboBoxItem Content="跨越速运"/>
            </ComboBox>

            <TextBox Text="{Binding Count}"
                     materialDesign:HintAssist.Hint="入库数量"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Margin="0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                <Button Content="取消" Style="{StaticResource MaterialDesignFlatButton}" 
                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                        CommandParameter="False"/>

                <Button Content="确定" Style="{StaticResource MaterialDesignRaisedButton}" Margin="10,0,0,0"
                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                        CommandParameter="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>